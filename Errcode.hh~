  NO_BIND,
  LISTEN,
  SIGACTION,
  BAD_PROTOCOL,
  FILE_NOT_FOUND,
  PERMISSION_DENIED,
  PERMISSION_NOWRITE,
  PERMISSION_NOEXEC,
  PERMISSION_NOREAD,
  DISK_FAILURE,
  OUT_OF_SPACE,
  CONNECTION_FAILURE,

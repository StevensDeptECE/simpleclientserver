#include "Request.hh"
#include <unistd.h>

void Request::handle(int sock) {
	cout << "Received socket: " << sock << '\n';
	char buf[256];
	int bytesRead = read(sock, buf, 256);
	cout << "bytes read: " << bytesRead << ' ';
	for (int i = 0; i < bytesRead; i++) // dump out buffer as numbers
		cout << int(buf[i]) << ' ';
	cout << '\n';
}
